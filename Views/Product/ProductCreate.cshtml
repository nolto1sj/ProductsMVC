@{

    <h1>Create a new product</h1>

    <form asp-controller="Product" asp-action="AddProductToDb">
        <label for="name">Name: </label>
        <input type="text" id="name" name="Name" required>

        <label for="brand">Brand: </label>
        <input type="text" id="brand" name="Brand">

        <label for="wholesale-cost">Wholesale Cost: </label>
        <input type="number" step="0.01" id="wholesale-cost" name="WholesaleCost" required>

        <label for="price">Price: </label>
        <input type="number" step="0.01" id="price" name="Price" required>

        <label for="current-stock">Current Stock: </label>
        <input type="number" id="current-stock" name="CurrentStock" required>

        <button type="submit">Create</button>
    </form>
}
