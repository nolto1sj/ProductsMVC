@using ProductsMvcDbFirst.Models.Products
@model List<ProductListItem>

    <h1>Product Index</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>


            @foreach (ProductListItem p in @Model)
            {

                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                </tr>
            }

        </tbody>
    </table>



